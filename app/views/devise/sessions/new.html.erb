<div class="container">
  <h2>로그인</h2>

    <img src="assets/logo.gif" style="width:cover;">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :이메일 %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "종합정보시스템 이메일" %>
    </div>

    <div class="field">
      <%= f.label :비밀번호 %><br />
      <%= f.password_field :password, autocomplete: "off", placeholder: "초기 생년월일8자리" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "로그인" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
